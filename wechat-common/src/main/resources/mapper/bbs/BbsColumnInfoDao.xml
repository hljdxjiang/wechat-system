<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nuoding.wechat.common.dao.bbs.BbsColumnInfoDao">

    <resultMap type="com.nuoding.wechat.common.entity.bbs.BbsColumnInfoEntity" id="BbsColumnInfoMap">
            <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="VARCHAR"/>
        <result property="columnId" column="column_id" jdbcType="VARCHAR"/>
        <result property="columnName" column="column_name" jdbcType="VARCHAR"/>
        <result property="columnDesc" column="column_desc" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="lastModifiedTime" column="last_modified_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Table_Name">
        bbs_column_info
    </sql>

    <sql id="Base_Column_List">
        id,tenant_id,column_id,column_name,column_desc,remark,status,create_time,last_modified_time    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="BbsColumnInfoMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BbsColumnInfoMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
                                                        <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
                                                <if test="columnId != null and columnId !=''">and column_id = #{columnId}</if>
                                                <if test="columnName != null and columnName !=''">and column_name = #{columnName}</if>
                                                <if test="columnDesc != null and columnDesc !=''">and column_desc = #{columnDesc}</if>
                                                <if test="remark != null and remark !=''">and remark = #{remark}</if>
                                                <if test="status != null and status !=''">and status = #{status}</if>
                                                            </where>
    </select>

    <!--查询一条-->
    <select id="selectOne" resultMap="BbsColumnInfoMap">
    select
    <include refid="Base_Column_List"/>
    from
    <include refid="Table_Name"/>
    <where>
                                                        <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
                                                <if test="columnId != null and columnId !=''">and column_id = #{columnId}</if>
                                                <if test="columnName != null and columnName !=''">and column_name = #{columnName}</if>
                                                <if test="columnDesc != null and columnDesc !=''">and column_desc = #{columnDesc}</if>
                                                <if test="remark != null and remark !=''">and remark = #{remark}</if>
                                                <if test="status != null and status !=''">and status = #{status}</if>
                                                                </where>
    </select>

    <!--查询指定行数据-->
    <select id="fuzzyQuery" resultMap="BbsColumnInfoMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
                                                                                                    <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
                                                                                                            <if test="columnId != null and columnId !=''">and column_id like CONCAT(CONCAT('%',  #{columnId}), '%')</if>
                                                                                                            <if test="columnName != null and columnName !=''">and column_name like CONCAT(CONCAT('%',  #{columnName}), '%')</if>
                                                                                                            <if test="columnDesc != null and columnDesc !=''">and column_desc like CONCAT(CONCAT('%',  #{columnDesc}), '%')</if>
                                                                                                            <if test="remark != null and remark !=''">and remark like CONCAT(CONCAT('%',  #{remark}), '%')</if>
                                                                                                            <if test="status != null and status !=''">and status like CONCAT(CONCAT('%',  #{status}), '%')</if>
                                                                                                                </where>

    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from
        <include refid="Table_Name"/>
        <where>
                                                <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
                                        <if test="columnId != null and columnId !=''">and column_id = #{columnId}</if>
                                        <if test="columnName != null and columnName !=''">and column_name = #{columnName}</if>
                                        <if test="columnDesc != null and columnDesc !=''">and column_desc = #{columnDesc}</if>
                                        <if test="remark != null and remark !=''">and remark = #{remark}</if>
                                        <if test="status != null and status !=''">and status = #{status}</if>
                                    </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
        (tenant_id,column_id,column_name,column_desc,remark,)
        values
        (#{tenantId},#{columnId},#{columnName},#{columnDesc},#{remark},)
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
            (        tenant_id,        column_id,        column_name,        column_desc,        remark,)
        values
        <foreach collection="entities" item="entity" separator=",">
            (            #{entity.tenantId},            #{entity.columnId},            #{entity.columnName},            #{entity.columnDesc},            #{entity.remark},)
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
            (        tenant_id,        column_id,        column_name,        column_desc,        remark,        status,)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tenantId},#{entity.columnId},#{entity.columnName},#{entity.columnDesc},#{entity.remark},#{entity.status},)
        </foreach>
        on duplicate key update
        tenant_id=values(tenant_id),
    column_id=values(column_id),
    column_name=values(column_name),
    column_desc=values(column_desc),
    remark=values(remark),
    status=values(status),
        
        </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update
        <include refid="Table_Name"/>
        <set>
    <if test="tenantId != null and tenantId != ''">tenant_id = #{tenantId},</if>
    <if test="columnId != null and columnId != ''">column_id = #{columnId},</if>
    <if test="columnName != null and columnName != ''">column_name = #{columnName},</if>
    <if test="columnDesc != null and columnDesc != ''">column_desc = #{columnDesc},</if>
    <if test="remark != null and remark != ''">remark = #{remark},</if>
    <if test="status != null and status != ''">status = #{status},</if>
        </set>
        where id = #{id}
        <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from
        <include refid="Table_Name"/>
        where id = #{id}
        <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
    </delete>

</mapper>

