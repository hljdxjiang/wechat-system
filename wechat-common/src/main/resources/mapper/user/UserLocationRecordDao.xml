<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nuoding.wechat.common.dao.user.UserLocationRecordDao">

    <resultMap type="com.nuoding.wechat.common.entity.user.UserLocationRecordEntity" id="UserLocationRecordMap">
            <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="latitude" column="latitude" jdbcType="VARCHAR"/>
        <result property="longitude" column="longitude" jdbcType="VARCHAR"/>
        <result property="precision" column="precision" jdbcType="VARCHAR"/>
        <result property="channel" column="channel" jdbcType="VARCHAR"/>
        <result property="validDate" column="valid_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Table_Name">
        user_location_record
    </sql>

    <sql id="Base_Column_List">
        id,tenant_id,user_id,latitude,longitude,precision,channel,valid_date    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="UserLocationRecordMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserLocationRecordMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
            <if test="id != null and id !=''">and id = #{id}</if>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="userId != null and userId !=''">and user_id = #{userId}</if>
            <if test="latitude != null and latitude !=''">and latitude = #{latitude}</if>
            <if test="longitude != null and longitude !=''">and longitude = #{longitude}</if>
            <if test="precision != null and precision !=''">and precision = #{precision}</if>
            <if test="channel != null and channel !=''">and channel = #{channel}</if>
            <if test="validDate != null and validDate !=''">and valid_date = #{validDate}</if>
        </where>

    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from
        <include refid="Table_Name"/>
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="tenantId != null and tenantId != ''">and tenant_id = #{tenantId}</if>
            <if test="userId != null and userId != ''">and user_id = #{userId}</if>
            <if test="latitude != null and latitude != ''">and latitude = #{latitude}</if>
            <if test="longitude != null and longitude != ''">and longitude = #{longitude}</if>
            <if test="precision != null and precision != ''">and precision = #{precision}</if>
            <if test="channel != null and channel != ''">and channel = #{channel}</if>
            <if test="validDate != null and validDate != ''">and valid_date = #{validDate}</if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
        (tenant_id,user_id,latitude,longitude,precision,channel,valid_date)
        values
        (#{tenantId},#{userId},#{latitude},#{longitude},#{precision},#{channel},#{validDate})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
            (tenant_id,user_id,latitude,longitude,precision,channel,valid_date)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tenantId},#{entity.userId},#{entity.latitude},#{entity.longitude},#{entity.precision},#{entity.channel},#{entity.validDate})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
            (tenant_id,user_id,latitude,longitude,precision,channel,valid_date)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tenantId},#{entity.userId},#{entity.latitude},#{entity.longitude},#{entity.precision},#{entity.channel},#{entity.validDate})
        </foreach>
        on duplicate key update
                tenant_id=values(tenant_id),
        user_id=values(user_id),
        latitude=values(latitude),
        longitude=values(longitude),
        precision=values(precision),
        channel=values(channel),
        valid_date=values(valid_date)
        </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update
        <include refid="Table_Name"/>
        <set>
    <if test="tenantId != null and tenantId != ''">tenant_id = #{tenantId},</if>
    <if test="userId != null and userId != ''">user_id = #{userId},</if>
    <if test="latitude != null and latitude != ''">latitude = #{latitude},</if>
    <if test="longitude != null and longitude != ''">longitude = #{longitude},</if>
    <if test="precision != null and precision != ''">precision = #{precision},</if>
    <if test="channel != null and channel != ''">channel = #{channel},</if>
    <if test="validDate != null and validDate != ''">valid_date = #{validDate},</if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from
        <include refid="Table_Name"/>
        where id = #{id}
    </delete>

</mapper>

