<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nuoding.wechat.common.dao.sys.SysBlacklistDao">

    <resultMap type="com.nuoding.wechat.common.entity.sys.SysBlacklistEntity" id="SysBlacklistMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="channel" column="channel" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="mobileNo" column="mobile_no" jdbcType="VARCHAR"/>
        <result property="blackType" column="black_type" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Table_Name">
        sys_blacklist
    </sql>

    <sql id="Base_Column_List">
        id,tenant_id,user_id,channel,remark,create_time,mobile_no,black_type    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="SysBlacklistMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysBlacklistMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="userId != null and userId !=''">and user_id = #{userId}</if>
            <if test="channel != null and channel !=''">and channel = #{channel}</if>
            <if test="remark != null and remark !=''">and remark = #{remark}</if>
            <if test="mobileNo != null and mobileNo !=''">and mobile_no = #{mobileNo}</if>
            <if test="blackType != null and blackType !=''">and black_type = #{blackType}</if>
        </where>
    </select>

    <!--查询一条-->
    <select id="selectOne" resultMap="SysBlacklistMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="userId != null and userId !=''">and user_id = #{userId}</if>
            <if test="channel != null and channel !=''">and channel = #{channel}</if>
            <if test="remark != null and remark !=''">and remark = #{remark}</if>
            <if test="mobileNo != null and mobileNo !=''">and mobile_no = #{mobileNo}</if>
            <if test="blackType != null and blackType !=''">and black_type = #{blackType}</if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="fuzzyQuery" resultMap="SysBlacklistMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="userId != null and userId !=''">and user_id like CONCAT(CONCAT('%', #{userId}), '%')</if>
            <if test="channel != null and channel !=''">and channel like CONCAT(CONCAT('%', #{channel}), '%')</if>
            <if test="remark != null and remark !=''">and remark like CONCAT(CONCAT('%', #{remark}), '%')</if>
            <if test="mobileNo != null and mobileNo !=''">and mobile_no like CONCAT(CONCAT('%', #{mobileNo}), '%')</if>
            <if test="blackType != null and blackType !=''">and black_type like CONCAT(CONCAT('%', #{blackType}), '%')
            </if>
        </where>

    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="userId != null and userId !=''">and user_id = #{userId}</if>
            <if test="channel != null and channel !=''">and channel = #{channel}</if>
            <if test="remark != null and remark !=''">and remark = #{remark}</if>
            <if test="mobileNo != null and mobileNo !=''">and mobile_no = #{mobileNo}</if>
            <if test="blackType != null and blackType !=''">and black_type = #{blackType}</if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
        (tenant_id,user_id,channel,remark,mobile_no,black_type)
        values
        (#{tenantId},#{userId},#{channel},#{remark},#{mobileNo},#{blackType})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
        ( tenant_id, user_id, channel, remark, mobile_no, black_type)
        values
        <foreach collection="entities" item="entity" separator=",">
            ( #{entity.tenantId}, #{entity.userId}, #{entity.channel}, #{entity.remark}, #{entity.mobileNo},
            #{entity.blackType})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
        ( tenant_id, user_id, channel, remark, mobile_no, black_type)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tenantId},#{entity.userId},#{entity.channel},#{entity.remark},#{entity.mobileNo},#{entity.blackType})
        </foreach>
        on duplicate key update
        tenant_id=values(tenant_id),
        user_id=values(user_id),
        channel=values(channel),
        remark=values(remark),
        mobile_no=values(mobile_no),
        black_type=values(black_type)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update
        <include refid="Table_Name"/>
        <set>
            <if test="tenantId != null and tenantId != ''">tenant_id = #{tenantId},</if>
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="channel != null and channel != ''">channel = #{channel},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="mobileNo != null and mobileNo != ''">mobile_no = #{mobileNo},</if>
            <if test="blackType != null and blackType != ''">black_type = #{blackType},</if>
        </set>
        where id = #{id}
        <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from
        <include refid="Table_Name"/>
        where id = #{id}
        <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
    </delete>

</mapper>

