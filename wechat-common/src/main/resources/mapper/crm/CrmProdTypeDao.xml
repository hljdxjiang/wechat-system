    <select id="fuzzyQuery" resultMap="CrmProdTypeMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="prodTypeId != null and prodTypeId !=''">and prod_type_id like CONCAT(CONCAT('%', #{prodTypeId}),
                '%')
            </if>
            <if test="prodTypeName != null and prodTypeName !=''">and prod_type_name like CONCAT(CONCAT('%',
                #{prodTypeName}), '%')
            </if>
            <if test="parentId != null and parentId !=''">and parent_id like CONCAT(CONCAT('%', #{parentId}), '%')</if>
            <if test="status != null and status !=''">and status like CONCAT(CONCAT('%', #{status}), '%')</if>
