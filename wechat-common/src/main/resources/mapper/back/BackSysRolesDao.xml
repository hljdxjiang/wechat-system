<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nuoding.wechat.common.dao.back.BackSysRolesDao">

    <resultMap type="com.nuoding.wechat.common.entity.back.BackSysRolesEntity" id="BackSysRolesMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="VARCHAR"/>
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="roleRemark" column="role_remark" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="lastModifiedTime" column="last_modified_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Table_Name">
        back_sys_roles
    </sql>

    <sql id="Base_Column_List">
        id,tenant_id,role_id,role_name,role_remark,create_time,last_modified_time    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="BackSysRolesMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BackSysRolesMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="roleId != null and roleId !=''">and role_id = #{roleId}</if>
            <if test="roleName != null and roleName !=''">and role_name = #{roleName}</if>
            <if test="roleRemark != null and roleRemark !=''">and role_remark = #{roleRemark}</if>
        </where>
    </select>

    <!--查询一条-->
    <select id="selectOne" resultMap="BackSysRolesMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="roleId != null and roleId !=''">and role_id = #{roleId}</if>
            <if test="roleName != null and roleName !=''">and role_name = #{roleName}</if>
            <if test="roleRemark != null and roleRemark !=''">and role_remark = #{roleRemark}</if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="fuzzyQuery" resultMap="BackSysRolesMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="roleId != null and roleId !=''">and role_id like CONCAT(CONCAT('%', #{roleId}), '%')</if>
            <if test="roleName != null and roleName !=''">and role_name like CONCAT(CONCAT('%', #{roleName}), '%')</if>
            <if test="roleRemark != null and roleRemark !=''">and role_remark like CONCAT(CONCAT('%', #{roleRemark}),
                '%')
            </if>
        </where>

    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="roleId != null and roleId !=''">and role_id = #{roleId}</if>
            <if test="roleName != null and roleName !=''">and role_name = #{roleName}</if>
            <if test="roleRemark != null and roleRemark !=''">and role_remark = #{roleRemark}</if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
        (tenant_id,role_id,role_name,role_remark,)
        values
        (#{tenantId},#{roleId},#{roleName},#{roleRemark},)
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
        ( tenant_id, role_id, role_name, role_remark,)
        values
        <foreach collection="entities" item="entity" separator=",">
            ( #{entity.tenantId}, #{entity.roleId}, #{entity.roleName}, #{entity.roleRemark},)
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
        ( tenant_id, role_id, role_name, role_remark,)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tenantId},#{entity.roleId},#{entity.roleName},#{entity.roleRemark},)
        </foreach>
        on duplicate key update
        tenant_id=values(tenant_id),
        role_id=values(role_id),
        role_name=values(role_name),
        role_remark=values(role_remark),

    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update
        <include refid="Table_Name"/>
        <set>
            <if test="tenantId != null and tenantId != ''">tenant_id = #{tenantId},</if>
            <if test="roleId != null and roleId != ''">role_id = #{roleId},</if>
            <if test="roleName != null and roleName != ''">role_name = #{roleName},</if>
            <if test="roleRemark != null and roleRemark != ''">role_remark = #{roleRemark},</if>
        </set>
        where id = #{id}
        <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from
        <include refid="Table_Name"/>
        where id = #{id}
        <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
    </delete>

</mapper>

