            (        roleid,        path,        title,        type,        parent_path)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleid},#{entity.path},#{entity.title},#{entity.type},#{entity.parentPath})
        </foreach>
        on duplicate key update
        roleid=values(roleid),
    path=values(path),
    title=values(title),
    type=values(type),
    parent_path=values(parent_path)
        </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update
        <include refid="Table_Name"/>
        <set>
    <if test="roleid != null and roleid != ''">roleid = #{roleid},</if>
    <if test="path != null and path != ''">path = #{path},</if>
    <if test="title != null and title != ''">title = #{title},</if>
    <if test="type != null and type != ''">type = #{type},</if>
    <if test="parentPath != null and parentPath != ''">parent_path = #{parentPath},</if>
        </set>
        where id = #{id}
