    <!--查询一条-->
    <select id="selectOne" resultMap="BackSysRoleDetailMap">
    select
    <include refid="Base_Column_List"/>
    from
    <include refid="Table_Name"/>
    <where>
                                                        <if test="roleid != null and roleid !=''">and roleid = #{roleid}</if>
                                                <if test="path != null and path !=''">and path = #{path}</if>
                                                <if test="title != null and title !=''">and title = #{title}</if>
                                                <if test="type != null and type !=''">and type = #{type}</if>
                                                <if test="parentPath != null and parentPath !=''">and parent_path = #{parentPath}</if>
                        </where>
    </select>

    <!--查询指定行数据-->
    <select id="fuzzyQuery" resultMap="BackSysRoleDetailMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
                                                                                                    <if test="roleid != null and roleid !=''">and roleid like CONCAT(CONCAT('%',  #{roleid}), '%')</if>
                                                                                                            <if test="path != null and path !=''">and path like CONCAT(CONCAT('%',  #{path}), '%')</if>
                                                                                                            <if test="title != null and title !=''">and title like CONCAT(CONCAT('%',  #{title}), '%')</if>
                                                                                                            <if test="type != null and type !=''">and type like CONCAT(CONCAT('%',  #{type}), '%')</if>
                                                                                                            <if test="parentPath != null and parentPath !=''">and parent_path like CONCAT(CONCAT('%',  #{parentPath}), '%')</if>
                                                        </where>

    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from
        <include refid="Table_Name"/>
        <where>
                                                <if test="roleid != null and roleid !=''">and roleid = #{roleid}</if>
                                        <if test="path != null and path !=''">and path = #{path}</if>
                                        <if test="title != null and title !=''">and title = #{title}</if>
                                        <if test="type != null and type !=''">and type = #{type}</if>
                                        <if test="parentPath != null and parentPath !=''">and parent_path = #{parentPath}</if>
            </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
        (roleid,path,title,type,parent_path)
        values
        (#{roleid},#{path},#{title},#{type},#{parentPath})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="Table_Name"/>
            (        roleid,        path,        title,        type,        parent_path)
        values
        <foreach collection="entities" item="entity" separator=",">
            (            #{entity.roleid},            #{entity.path},            #{entity.title},            #{entity.type},            #{entity.parentPath})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
