    <!--查询指定行数据-->
    <select id="fuzzyQuery" resultMap="BackRuleControlMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="controlType != null and controlType !=''">and control_type like CONCAT(CONCAT('%',
                #{controlType}), '%')
            </if>
            <if test="controlDesc != null and controlDesc !=''">and control_desc like CONCAT(CONCAT('%',
                #{controlDesc}), '%')
            </if>
            <if test="ruleRange != null and ruleRange !=''">and rule_range like CONCAT(CONCAT('%', #{ruleRange}), '%')
            </if>
            <if test="controlSwitch != null and controlSwitch !=''">and control_switch like CONCAT(CONCAT('%',
                #{controlSwitch}), '%')
            </if>
            <if test="ruleExpr != null and ruleExpr !=''">and rule_expr like CONCAT(CONCAT('%', #{ruleExpr}), '%')</if>
        </where>

    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from
        <include refid="Table_Name"/>
        <where>
            <if test="tenantId != null and tenantId !=''">and tenant_id = #{tenantId}</if>
            <if test="controlType != null and controlType !=''">and control_type = #{controlType}</if>
